@model LoginUserDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="~/css/loginsheet.css">
</head>
<body>
    <div class="login-container">
        <h2>Login</h2>
        <form action="#" method="post" class="login-form">
            <div class="form-group">
                <input type="text" id="username" placeholder="Username" asp-for="Username" />
                <span asp-validation-for="Username"></span>
            </div>
            <div class="form-group">
                <input type="password" id="password" placeholder="Password" asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
            <button type="submit">Login</button>
        </form>
        <p>Don't have an account?  <a href="/Register/Index.html">Sign up</a></p>
    </div>
</body>
</html>

